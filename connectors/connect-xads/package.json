{
  "name": "@hasna/connect-xads",
  "version": "0.1.0",
  "description": "Twitter/X Ads API connector CLI - Manage ad campaigns, promoted tweets, targeting, and analytics",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "connect-xads": "./bin/index.js"
  },
  "scripts": {
    "dev": "bun run ./src/cli/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && bun build ./src/cli/index.ts --outdir ./bin --target bun",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "twitter",
    "x",
    "ads",
    "advertising",
    "campaigns",
    "promoted-tweets",
    "analytics",
    "connector",
    "cli",
    "typescript",
    "bun",
    "hasna"
  ],
  "author": "Hasna",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "README.md",
    "CLAUDE.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasna/connectors.git"
  }
}