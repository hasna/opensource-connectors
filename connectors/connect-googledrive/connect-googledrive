#!/usr/bin/env bash
set -euo pipefail

# Always run from the project root so any relative paths resolve correctly.
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

if [[ ! -d .venv ]]; then
  echo "Virtual environment .venv is missing. Run 'make install'." >&2
  exit 1
fi

source .venv/bin/activate
python -m cli "$@"
